<%@ Control Language="C#" Inherits="System.Web.Mvc.ViewUserControl" %> 
<link href="/Css/Posted.css" rel="stylesheet" />
<script src="/Jscript/jquery-2.2.0.min.js"></script>
<script src="/Jscript/Posted.js"></script>

<%--林玲--%>

<div class="Posted">
    <div class="Border-top">
        <div class="t_l"></div>
        <div class="t_c"></div>
        <div class="t_r"></div>
    </div>
    <div class="Posted_c">
        <div class="c_l"></div>
        <div class="roof">
            <p>发表帖子</p>
            <a title="关闭"></a>
        </div>
        <div class="posting">
            <div class="title">
                <input type="text" />
            </div>
            <div class="content">
                <div class="cTop">
                    <div class="cFunction">
                        <a title="文字加粗" class="cBold"></a>
                        <a title="设置文字颜色" class="cColor"></a>
                        <a style="margin-top: 2px;" title="图片" class="cImg"></a>
                        <a title="添加链接" class="cUrl"></a>
                        <a style="margin-top: 3px;" title="引用" class="cQuote"></a>
                        <a title="代码" class="cCode"></a>
                        <a class="cSmile"></a>
                    </div>
                    <div class="cAdvanced">
                        <a>高级模式</a>
                    </div>
                </div>
                <textarea class="Mix"></textarea>
            </div>
            <div class="cPublish">
                <button><strong>发表帖子</strong></button>
            </div>
        </div>
        <div class="c_r"></div>
    </div>
    <div class="Border-bottom">
        <div class="b_l"></div>
        <div class="b_c"></div>
        <div class="b_r"></div>
    </div>
</div>
