                var oEvent = ev || event;
                var l = oEvent.clientX - disX;
                var t = oEvent.clientY - disY;
                if (l < 0)
                    l = 0;
                if (t < 0)
                    t = 0;
                doething.style.left = l + 'px';
                doething.style.top = t + 'px';
            };
            doething.onmouseup = function () {
                document.onmousemove = null;
                document.onmouseup = null;
            };
        };
