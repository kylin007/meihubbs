       function slide(obj_name) {
           var obj = $("#" + obj_name);
           if (obj){
               if (obj.css('display') == "block") {
                   obj.css({ "display":"none" });
               }
               else {
                   obj.css({"display":"block"});
               }
           }
           var img = $("." + obj_name + '_img');
           if (img) {
               if (img.attr("src") == "image/collapsed_no.gif") {
                   img.attr("src", "image/collapsed_yes.gif");
               }
               else {
                   img.attr("src", "image/collapsed_no.gif");
               }
           }

       }


